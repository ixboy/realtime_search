<div class="col-xs-12 text-center m-3">
  <h1>All Searches and analytics</h1>
</div>
<table class="table table-Secondary table-hover table-striped ">
  <thead class="table-dark">
    <tr>
      <th scope="col">Search term</th>
      <th scope="col">Time searched by different Users</th>
    </tr>
  </thead>
  <tbody>
    <% if @searches.empty? %>
      <tr>
        <td colspan="4" class="text-center">
          <h3>Nothing have been searched yet!.</h3>
        </td>
      </tr>
    <% end %>
    <%@searches.each do |search| %>
      <tr>
        <th scope="row"><%= search[0]%></th>
        <td>
          <%= search[1] %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
